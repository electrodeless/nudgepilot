{
  "name": "nudgepilot-desktop",
  "version": "0.1.0",
  "description": "Desktop shell for the NudgePilot assistant prototype UI.",
  "main": "main.js",
  "author": "NudgePilot Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build:dir": "electron-builder --dir",
    "build:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.nudgepilot.assistant",
    "productName": "NudgePilot Assistant",
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "build/**/*"
    ],
    "extraResources": [
      {
        "from": "../ui",
        "to": "app"
      }
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  }
}
